// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height":16, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/arch",
        "hyprland/workspaces",
        "hyprland/submap",
        "sway/scratchpad",
        "custom/media"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "tray",
        "custom/notification",
        "custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "on-click": "activate",
        "all-outputs": false,
        "format": "{icon}",
        "format-icons": {
            "1": "‚¨§",
            "2": "‚¨§",
            "3": "‚¨§",
            "4": "‚¨§",
            "5": "‚¨§",
            "6": "‚¨§",
            "7": "‚¨§",
            "8": "‚¨§",
            "9": "‚¨§",
            "urgent": "‚¨§",
            "active": "‚¨§",
            "default": "‚¨§"
        },
        "sort-by-number": true,
        "persistent-workspaces": {
            "*": 5
        }
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size":48,
        "spacing": 10,
        "on-click-middle": "close",
        "tooltip-format": "{title}",
        "ignore-list": [],
        "on-click": "activate"
